    "test": "echo \"Error: no test specified\" && exit 1",
    "predeploy": "npm run build:css"
  },
  "keywords": [
    "chatbot",
    "ai",
    "microservice",
    "widget"
  ],
  "author": "",
  "license": "ISC",
