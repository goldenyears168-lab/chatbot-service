{
  "id": "faq-check",
  "name": "FAQ Check",
  "version": "1.0.0",
  "category": "core",
  "description": "检查 FAQ 并匹配答案，支持菜单选择和模糊匹配",
  "icon": "❓",
  "color": "#FF5722",
  
  "inputs": [
    {
      "name": "message",
      "type": "string",
      "required": true,
      "description": "用户消息"
    },
    {
      "name": "intent",
      "type": "string",
      "required": true,
      "description": "用户意图"
    },
    {
      "name": "source",
      "type": "string",
      "required": false,
      "description": "消息来源（menu/input）"
    },
    {
      "name": "knowledgeBase",
      "type": "KnowledgeBase",
      "required": true,
      "description": "知识库"
    },
    {
      "name": "conversationContext",
      "type": "ConversationContext",
      "required": true,
      "description": "对话上下文"
    },
    {
      "name": "mergedEntities",
      "type": "object",
      "required": true,
      "description": "合并的实体"
    },
    {
      "name": "contextManager",
      "type": "ContextManager",
      "required": true,
      "description": "上下文管理器"
    },
    {
      "name": "corsHeaders",
      "type": "object",
      "required": true,
      "description": "CORS headers"
    },
    {
      "name": "nextState",
      "type": "string",
      "required": true,
      "description": "下一个状态"
    }
  ],
  
  "outputs": [
    {
      "name": "continue",
      "type": "object",
      "description": "未匹配 FAQ，继续流程"
    },
    {
      "name": "response",
      "type": "Response",
      "description": "匹配到 FAQ，返回响应"
    }
  ],
  
  "config": {
    "prioritizeMenuSource": true,
    "enableFuzzyMatch": true,
    "minMatchScore": 0.5,
    "maxResults": 1
  }
}
